<h1>Create new figure:</h1>
<form action="/figures" method="post">
	<label>Name:</label>
	<input type="text" name="figure[name]" id="figure_name">
	<br><br>
	
	<fieldset>
		<label for="">Titles:</label><br>
		<% @titles.each do |title| %>
			<input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= "title_#{title.id}" %>"><%= title.name %>
		<% end %>
		<br><br>
		
		<label>New Title:</label>
		<input type="text" name="title[name]" id="new_title">
		<br><br>
	</fieldset>
	
	<fieldset>
		<label for="">Landmarks:</label><br>
		<% @landmarks.each do |landmark| %>
			<input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= "landmark_#{landmark.id}" %>"><%= landmark.name %>
		<% end %>
		<br><br>
		
		<label>New Landmark:</label>
		<input type="text" name="landmark[name]" id="new_landmark">
		<br><br>
		<label for="">Year Completed:</label>
		<input type="text" name="landmark[year_completed]" id="landmark_year_completed">
		<br><br>
	</fieldset>
	
	

	<br><br>
	<input type="submit" value="Create New Figure">
</form>