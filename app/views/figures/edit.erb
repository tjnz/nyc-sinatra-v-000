<h1>Edit figure:</h1>
<form action="/figures/<%=@figure.id%>" method="post">
	<input type="hidden" name="_method" value="patch">
	<label>Name:</label>
	<input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
	<br><br>
	
	<fieldset>
		<label for="">Titles:</label><br>
		<% @titles.each do |title| %>
			<input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %> id="<%= "title_#{title.id}" %>" ><%= title.name %>
		<% end %>
		<br><br>
		
		<label>New Title:</label>
		<input type="text" name="title[name]" id="new_title">
		<br><br>
	</fieldset>
	
	<fieldset>
		<label for="">Landmarks:</label><br>
		<% @landmarks.each do |landmark| %>
			<input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %> id="<%= "landmark_#{landmark.id}" %>" ><%= landmark.name %>
		<% end %>
		<br><br>
		
		<label>New Landmark:</label>
		<input type="text" name="landmark[name]" id="new_landmark">
		<br><br>
		<label for="">Year Completed:</label>
		<input type="text" name="landmark[year_completed]" id="landmark_year_completed">
		<br><br>
	</fieldset>
	
	

	<br><br>
	<input type="submit" value="Edit Figure">
</form>